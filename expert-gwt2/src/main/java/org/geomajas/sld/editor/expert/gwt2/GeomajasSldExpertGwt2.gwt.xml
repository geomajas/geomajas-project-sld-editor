<module>

	<inherits name="com.google.gwt.user.User"/>
	<inherits name="com.google.gwt.i18n.I18N"/>

 	<inherits name="org.geomajas.sld.editor.expert.common.GeomajasSldExpertCommon"/>

	<extend-property name="locale" values="nl"/>
	<extend-property name="locale" values="en"/>

	<source path="client">
		<exclude name="*Test*.java"/>
	</source>

	<!-- Override the common view implementation -->
	<replace-with class="org.geomajas.sld.editor.expert.gwt2.client.SldEditorViewFactoryImpl">
		<when-type-is class="org.geomajas.sld.editor.expert.common.client.SldEditorViewFactory" />
	</replace-with>

	<!-- Override the common css resource -->
	<replace-with class="org.geomajas.sld.editor.expert.gwt2.client.SldEditorClientBundleFactoryAlternative">
		<when-type-is class="org.geomajas.sld.editor.expert.common.client.SldEditorClientBundleFactory" />
	</replace-with>

</module>